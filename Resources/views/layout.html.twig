<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>{% block title %}Expences analyzer{% endblock %}</title>
    <!--    <link href="http://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet" type="text/css"/>-->
    {% stylesheets '@WowoExpencesBundle/Resources/public/css/*' %}
      <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
    <link rel="shortcut icon" href="{{ asset('css/favicon.png') }} "/>
    <script type="text/javascript">
      var router = {
        save_tags:  "{{ path('save_tags') }}",
        multi_tags: "{{ path('multi_tags') }}",
      }
    </script>
  </head>
  <body>
    {% block main %}
      <div id="top">
        {% block header %}
        <div id="login"><span style="color:red"> is logged here</span></div>
          <div id="logo"><h1>Expences analyzer</h1></div>
        {% endblock %}
      </div>
      {% block menu %}
        <ul id="menu">
          <li><a href="{{ path('operations') }}">Operations</a></li>
          <li><a href="{{ path('operation_new') }}">New</a></li>
          <li><a href="{{ path('upload') }}">Upload</a></li>
          <li><a href="{{ path('tags_monthly_graph') }}">Stats</a></li>
        </ul>
      {% endblock %}
      <div id="middle">
        <div id="page_title">
          {% block page_title "Subpage" %}
        </div>
        <div id="content">
          {% block content "" %}
        </div>
      </div>
      <div id="bottom">{% block footer %}Made by: <a href="http://sznapka.pl">Sznapka.pl</a>{% endblock %}</div>
    {% endblock %}
    {% javascripts '@WowoExpencesBundle/Resources/public/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
  </body>
</html>
